<bpel:process name="Comprador"
         targetNamespace="http://comprador"
         suppressJoinFailure="yes"
         xmlns:tns="http://comprador"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns1="http://www.w3.org/2001/XMLSchema" xmlns:ns="http://vendedor">

    <!-- Import the client WSDL -->
	<bpel:import location="CompradorArtifacts.wsdl" namespace="http://comprador" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:Comprador"
                     myRole="CompradorProvider"
                     />
        <bpel:partnerLink name="VendedorPL" partnerLinkType="tns:VendedorTN" partnerRole="VendedorRN" initializePartnerRole="yes"></bpel:partnerLink>
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:CompradorRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:CompradorResponseMessage"/>
        <bpel:variable name="productoDecido" type="ns1:string"></bpel:variable>
        
        
        
        
        <bpel:variable name="VendedorPLResponse" messageType="ns:existeProductoResponse"></bpel:variable>
        <bpel:variable name="VendedorPLRequest" messageType="ns:existeProductoRequest"></bpel:variable>
        <bpel:variable name="oferta" type="ns1:double">
            <bpel:from>
                <bpel:literal xml:space="preserve">8500.0
</bpel:literal>
            </bpel:from>
        </bpel:variable>
        <bpel:variable name="ofertaRecibida" type="ns1:double"></bpel:variable>
        <bpel:variable name="ofertaAceptada" type="ns1:boolean">
            <bpel:from expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
           
                <![CDATA[boolean(false)]]>
            </bpel:from>
        </bpel:variable>
        <bpel:variable name="VendedorPLResponse1" messageType="ns:recibirOfertaResponse"></bpel:variable>
        <bpel:variable name="VendedorPLRequest1" messageType="ns:recibirOfertaRequest"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in Comprador.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="tns:Comprador"
                 operation="process" variable="input"
                 createInstance="yes"/>
        
        <!-- Generate reply to synchronous request -->
        
        <bpel:assign validate="no" name="AsignarProducto">
            <bpel:copy>
                <bpel:from><bpel:literal><tns:existeProducto xmlns:tns="http://vendedor" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:in>tns:in</tns:in>
</tns:existeProducto>
</bpel:literal></bpel:from>
                <bpel:to variable="VendedorPLRequest" part="parameters"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:input]]></bpel:query>
                </bpel:from>
                <bpel:to part="parameters" variable="VendedorPLRequest">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:in]]></bpel:query>
                </bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:invoke name="PedirPrecio" partnerLink="VendedorPL" operation="existeProducto" portType="ns:Vendedor" inputVariable="VendedorPLRequest" outputVariable="VendedorPLResponse"></bpel:invoke>
        
        <bpel:assign validate="no" name="AsignarPrecio">
            <bpel:copy>
                <bpel:from><bpel:literal><tns:CompradorResponse xmlns:tns="http://comprador" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:result>0.0</tns:result>
</tns:CompradorResponse>
</bpel:literal></bpel:from>
                <bpel:to variable="output" part="payload"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="parameters" variable="VendedorPLResponse">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:out]]></bpel:query>
                </bpel:from>
                <bpel:to variable="ofertaRecibida">
                </bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:if name="If">
            <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$ofertaRecibida = 0]]></bpel:condition>
            <bpel:sequence>
                <bpel:assign validate="no" name="AsignarFallo">
                    <bpel:copy>
                        <bpel:from>
                            <bpel:literal xml:space="preserve">El vendedor no tiene el articulo</bpel:literal>
                        </bpel:from>
                        <bpel:to part="payload" variable="output">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                </bpel:assign>
                <bpel:reply name="replyFallo" partnerLink="client" portType="tns:Comprador" operation="process" variable="output" />
            </bpel:sequence>
            <bpel:else>
                <bpel:sequence>
                    <bpel:assign validate="no" name="InicializarOfertaInicial">
                        <bpel:copy>
                            <bpel:from>
                                <bpel:literal xml:space="preserve">8500.0</bpel:literal>
                            </bpel:from>
                            <bpel:to variable="oferta"></bpel:to>
                        </bpel:copy>
                    </bpel:assign>
                    <bpel:assign validate="no" name="InicializarOfertaAceptada">
                        <bpel:copy>
                            <bpel:from>
                                <bpel:literal xml:space="preserve">false</bpel:literal>
                            </bpel:from>
                            <bpel:to variable="ofertaAceptada"></bpel:to>
                        </bpel:copy>
                    </bpel:assign>
                    <bpel:while name="While">
                        <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[boolean($ofertaAceptada) = boolean(false)]]></bpel:condition>
                        <bpel:sequence>
                            <bpel:assign validate="no" name="AumentarOferta">
                                <bpel:copy>
                                    <bpel:from expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
       
                                        <![CDATA[$oferta + 100]]>
                                    </bpel:from>
                                    <bpel:to variable="oferta"></bpel:to>
                                </bpel:copy>
                            </bpel:assign>
                            <bpel:assign validate="no" name="AsignarNuevaOferta">
                                <bpel:copy>
                                    <bpel:from><bpel:literal><tns:recibirOferta xmlns:tns="http://vendedor" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:in>0.0</tns:in>
</tns:recibirOferta>
</bpel:literal></bpel:from>
                                    <bpel:to variable="VendedorPLRequest1" part="parameters"></bpel:to>
                                </bpel:copy>
                                <bpel:copy>
                                    <bpel:from variable="oferta"></bpel:from>
                                    <bpel:to part="parameters" variable="VendedorPLRequest1">
                                        <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:in]]></bpel:query>
                                    </bpel:to>
                                </bpel:copy>
                            </bpel:assign>
                            <bpel:invoke name="HacerOferta" partnerLink="VendedorPL" operation="recibirOferta" portType="ns:Vendedor" inputVariable="VendedorPLRequest1" outputVariable="VendedorPLResponse1"></bpel:invoke>
                            <bpel:assign validate="no" name="AsignarOfertaAceptada">
                                <bpel:copy>
                                    <bpel:from part="parameters" variable="VendedorPLResponse1">
                                        <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:out]]></bpel:query>
                                    </bpel:from>
                                    <bpel:to variable="ofertaAceptada"></bpel:to>
                                </bpel:copy>
                            </bpel:assign>
                        </bpel:sequence>
                    </bpel:while>
                    <bpel:assign validate="no" name="AsignarAcierto">
                        <bpel:copy>
                            <bpel:from expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                                
                                <![CDATA[concat( 'Se ha comprado el ordenador por ' , string($oferta) , 'â‚¬')]]>
                            </bpel:from>
                            <bpel:to part="payload" variable="output">
                                <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                            </bpel:to>
                        </bpel:copy>
                    </bpel:assign>
                    <bpel:reply name="ReplyAcierto" partnerLink="client" operation="process" portType="tns:Comprador" variable="output"></bpel:reply>
                </bpel:sequence>
            </bpel:else>
        </bpel:if>
        
    </bpel:sequence>
</bpel:process>

